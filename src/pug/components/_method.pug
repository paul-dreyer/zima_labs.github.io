mixin method(name, signature, desc, params, example)
  section(id=name class="mb-12")
    h2(class="text-3xl font-heading text-green-300 mb-2")= name
    p(class="text-gray-300 mb-4")= desc

    div(class="bg-gray-800 p-4 rounded-lg mb-4")
      h3(class="text-xl text-white mb-2") Signature
      code(class="text-green-400 text-sm")= signature

    if params.length
      h3(class="text-xl text-white mb-2") Parameters
      ul(class="list-disc list-inside text-gray-300 mb-4")
        each param in params
          li= param

    if example
      h3(class="text-xl text-white mb-2") Example
      pre(class="bg-gray-900 p-3 rounded text-green-400 text-sm overflow-x-auto")= example
